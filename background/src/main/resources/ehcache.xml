<?xml version="1.0" encoding="UTF-8"?>
<ehcache name="syscache">

    <diskStore path="java.io.tmpdir"/>
	
	<!-- 配置缓存设置 -->           
    <cache name="category"
           maxEntriesLocalHeap="2000"
           eternal="true"
           timeToIdleSeconds="3600"
           timeToLiveSeconds="0"
           overflowToDisk="false"
           statistics="true"/>

    <cache name="sysFunc"
           maxEntriesLocalHeap="2000"
           eternal="true"
           timeToIdleSeconds="3600"
           timeToLiveSeconds="0"
           overflowToDisk="false"
           statistics="true"/>
</ehcache>
